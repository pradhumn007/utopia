<%- include('../../common/views/header.ejs')%> Product Details
<div class="row mb-3">
  <% for(let product of products) { %>
  <div class="col-md-3 mb-3">
    <form method="POST">
      <div class="card" style="width: 18rem">
        <img
          src="/<%=product.imageUrl%>"
          class="card-img-top"
          alt="<%= product.name%>"
          height="250"
        />
        <div class="card-body">
          <h5 class="card-title"><%=product.name%></h5>
          <h6 class="card-subtitle mb-3 text-muted">â‚¹ <%=product.price%></h6>
          <h6 class="card-subtitle mb-2 text-muted"><%=product.category%></h6>
          <p class="card-text"><%=product.description%></p>
          <a href="/product/edit?pid=<%=product.pid%>" class="btn btn-primary"
            >Edit</a
          >
          <input type="hidden" name="pid" value="<%=product.pid%>" />
          <input type="hidden" name="wishlist" value="<%=product.isWishlist%>" />
          <button class="btn btn-primary" formaction="/product/delete" type="submit">Delete</button>
          <button class="btn btn-primary" formaction="/product/wishlist" type="submit">
            <i class="<%= product.isWishlist ? 'fas' : 'far' %> fa-bookmark"></i> Wishlist
          </button>
        </div>
      </div>
    </form>
  </div>
  <% } %>
</div>
<%- include('../../common/views/footer.ejs')%>
